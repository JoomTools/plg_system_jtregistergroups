<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="user" method="upgrade">
	<name>plg_user_registergroups</name>
	<author>Guido De Gobbis</author>
	<creationDate>##DATE##</creationDate>
	<copyright>(C) JoomTools. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@joomtools.de</authorEmail>
	<authorUrl>joomtools.de</authorUrl>
	<version>1.0.0-dev</version>
	<description>PLG_USER_REGISTERGROUPS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="registergroups">registergroups.php</filename>
		<folder>registergroupss</folder>
		<folder>field</folder>
	</files>
	<languages folder="language">
		<language tag="de-DE">de-DE.plg_user_registergroups.ini</language>
		<language tag="de-DE">de-DE.plg_user_registergroups.sys.ini</language>
		<language tag="en-GB">en-GB.plg_user_registergroups.ini</language>
		<language tag="en-GB">en-GB.plg_user_registergroups.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_content/models/fields">
				<field
					name="register-require-user"
					type="spacer"
					label="PLG_USER_REGISTERGROUPS_FIELD_NAME_REGISTER_REQUIRE_USER"
					class="text"
				/>

				<field
					name="register-register-groups"
					type="list"
					label="groups"
					description=""
					default="1"
					filter="integer"
					>
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>

				<field name="guest_usergroup"
				       type="usergroup"
				       label="usergroup"
				       description=""
				       multiple="true"
				       showon="register-register-groups!:0"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
